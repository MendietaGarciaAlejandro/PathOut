{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "PathOut - Guía de Ciudad",
  "version": "1.0.0",
  "identifier": "com.pathout.cityguide",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:19006",
    "beforeDevCommand": "npm run export",
    "beforeBuildCommand": "npm run export"
  },
  "app": {
    "windows": [
      {
        "title": "PathOut - Guía de Ciudad",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false,
        "center": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
